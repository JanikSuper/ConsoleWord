using System;

namespace HomeWork
{
    class Program
    {
        static void Main(string[] args)
        {
            string text = "";
            string rotateText = "";

            Console.WriteLine($"Введите слово");
            text = Console.ReadLine();

            int size = text.Length;

            for (int i = size-1; i >= 0; i--)
            {
                Console.Write($"{text[i]} ");
            }
        }
    }
}
